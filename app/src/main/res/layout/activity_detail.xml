<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.donsaad.movies247.DetailActivity">

    <TextView
        android:id="@+id/tv_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        android:padding="@dimen/activity_vertical_margin"
        android:maxLines="2"
        android:ellipsize="end"
        android:elevation="7dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            >

            <ImageView
                android:id="@+id/img_poster"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:contentDescription="@string/desc_movie_poster"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015"
                android:textSize="23sp"
                android:textColor="@color/primary_text"
                android:layout_toRightOf="@+id/img_poster"
                android:layout_toEndOf="@+id/img_poster"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                />

            <TextView
                android:id="@+id/tv_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:text="8.3/10"
                android:layout_below="@+id/tv_release_date"
                android:layout_alignLeft="@+id/tv_release_date"
                android:layout_alignStart="@+id/tv_release_date"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                />

            <TextView
                android:id="@+id/tv_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_poster"
                android:textColor="@color/primary_text"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textSize="17sp"
                />

        </RelativeLayout>

    </ScrollView>
</LinearLayout>
