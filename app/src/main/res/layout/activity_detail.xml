<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.donsaad.movies247.DetailActivity">

    <TextView
        android:id="@+id/tv_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        android:padding="@dimen/activity_vertical_margin"
        android:maxLines="2"
        android:ellipsize="end"
        android:elevation="7dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            >
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="@dimen/cardview_default_elevation">
                <ImageView
                    android:id="@+id/img_poster"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:contentDescription="@string/desc_movie_poster"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015"
                android:textSize="23sp"
                android:textColor="@color/primary_text"
                android:layout_toRightOf="@+id/card_poster"
                android:layout_toEndOf="@+id/card_poster"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                />

            <TextView
                android:id="@+id/tv_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:text="8.3/10"
                android:layout_below="@+id/tv_release_date"
                android:layout_alignLeft="@+id/tv_release_date"
                android:layout_alignStart="@+id/tv_release_date"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                />

            <TextView
                android:id="@+id/tv_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_poster"
                android:textColor="@color/primary_text"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textSize="17sp"
                android:text=" asdjka hsdka hs\naklsdj\nalkdsjalksdjla\nklllllllllllllllll"
                />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_overview"
                android:background="@android:color/black"
                />

            <TextView
                android:id="@+id/tv_trailers_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trailers_label"
                android:layout_below="@+id/divider"
                android:textSize="21sp"
                android:layout_marginTop="7dp"
                />

            <ListView
                android:id="@+id/lv_trailers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_trailers_label"
                />


        </RelativeLayout>

    </ScrollView>
</LinearLayout>
